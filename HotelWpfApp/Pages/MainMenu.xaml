<Page x:Class="HotelWpfApp.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelWpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">
    <StackPanel VerticalAlignment="Center">
        <Label Content="Меню" HorizontalAlignment="Center"/>
        <Button x:Name="HotelBtn" Content="Отели" Click="HotelBtn_Click"/>
        <Button x:Name="RoomsBtn" Content="Номера" Click="RoomsBtn_Click"/>
        <Button x:Name="BronirovanieBtn" Click="BronirovanieBtn_Click" Content="Бронирование"/>
    </StackPanel>
</Page>
